#!/usr/bin/env bash

: << !
Name: spider
Author: YJ
Email: yj1516268@outlook.com
Created Time: 2022-10-24 14:48:12

Description: Linux系统信息搜集工具

Attentions: 搜集如下信息
- Package
- Service
- User
- Vim
- Guake
- Virtualenv

Depends:
- coreutils
- diffutils/colordiff
!

####################################################################
#+++++++++++++++++++++++++ Define Variable ++++++++++++++++++++++++#
####################################################################
#------------------------- Program Variable
# program name
name=$(basename "$0")
readonly name
# program nversion
readonly major_version=0.1.3
readonly minor_version=20230213
readonly rel_version=1

#------------------------- Exit Code Variable
readonly normal=0        # 一切正常
readonly err_param=2     # 参数错误
readonly err_unknown=255 # 未知错误

#------------------------- Parameter Variable
# description variable
readonly desc="用于搜集Linux系统信息"

# 搜集结果存储路径
readonly datadir="$HOME/.cache/SpiderData"

####################################################################
#+++++++++++++++++++++++++ Define Function ++++++++++++++++++++++++#
####################################################################
#------------------------- Info Function
function helpInfo() {
  echo -e ""
  echo -e "\e[32m$name\e[0m\e[1m$desc\e[0m"
  echo -e "--------------------------------------------------"
  echo -e "\e[1;33m搜集结果存储于\e[0m: \e[34m$datadir\e[0m"
  echo -e "--------------------------------------------------"
  echo -e "Usage:"
  echo -e ""
  echo -e "     $name OPTIONS"
  echo -e ""
  echo -e "Options:"
  echo -e "     -g, --get [MODULE]    指定搜集的模块"
  echo -e ""
  echo -e "     -h, --help            显示帮助信息"
  echo -e "     -v, --version         显示版本信息"
  echo -e ""
  echo -e "Modules:"
  echo -e "     all                   搜集全部模块"
  echo -e "     app                   搜集特定软件信息"
  echo -e "     env                   搜集开发工具虚拟环境信息"
  echo -e "     package               搜集安装包信息"
  echo -e "     service               搜集服务信息"
  echo -e "     user                  搜集用户信息"
}

function versionInfo() {
  echo -e ""
  echo -e "\e[1m$name\e[0m version (\e[1m$major_version-$minor_version.$rel_version\e[0m)"
}

function finish() {
  echo -e "\n\e[35m[✔]\e[0m 信息搜集完成"
  exit $normal
}

#------------------------- Feature Function
function Check() {
  if [[ ! -d $datadir ]]; then
    mkdir "$datadir"
  fi
}

function getAppInfo() {
  echo -e "正在搜集\e[1;34;47mApp\e[0m信息"
  /usr/local/bin/get-vim-hotkey-doc                        # vim的快捷键文档
  guake --save-preferences="$datadir/App/guake/guake.conf" # guake的配置文件
}

function getVirtualenvInfo() {
  echo -e "正在搜集\e[1;34;47mVirtualenv\e[0m信息"
  /usr/local/bin/py-virtualenv-tool -s # Python Virtualenv
}

function getPackageInfo() {
  echo -e "正在搜集\e[1;34;47mPackage\e[0m信息"
  pacman -Qenq > "$datadir/PackageList/Pacman.list" # 官方源中单独指定安装的软件包
  pacman -Qemq > "$datadir/PackageList/AUR.list"    # AUR中单独指定安装的软件包
}

function getServiceInfo() {
  echo -e "正在搜集\e[1;34;47mService\e[0m信息"
  systemctl list-unit-files > "$datadir/ServiceList/System.list"      # System service
  systemctl --user list-unit-files > "$datadir/ServiceList/User.list" # User service
}

function getUserInfo() {
  echo -e "正在搜集\e[1;34;47mUser\e[0m信息"
  id root yj > "$datadir/UserList/ID.list" # 当前$USER的id信息
}

####################################################################
#++++++++++++++++++++++++++++++ Main ++++++++++++++++++++++++++++++#
####################################################################
TEMP=$(getopt --options "g:hv" --longoptions "get:,help,version" -n "$name" -- "$@")
eval set -- "$TEMP"

if [[ ${#@} -lt 2 ]]; then
  helpInfo
  exit $err_param
else
  while true; do
    case $1 in
      -g | --get)
        case $2 in
          all)
            Check
            getAppInfo
            getVirtualenvInfo
            getPackageInfo
            getServiceInfo
            getUserInfo
            finish
            ;;
          app)
            Check
            getAppInfo
            finish
            ;;
          env)
            Check
            getVirtualenvInfo
            finish
            ;;
          package)
            Check
            getPackageInfo
            finish
            ;;
          service)
            Check
            getServiceInfo
            finish
            ;;
          user)
            Check
            getUserInfo
            finish
            ;;
          *)
            echo -e "\n\e[31m[✘]\e[0m 无法搜集该内容"
            exit $err_unknown
            ;;
        esac
        ;;
      -h | --help)
        helpInfo
        exit $normal
        ;;
      -v | --version)
        versionInfo
        exit $normal
        ;;
      --)
        shift 1
        break
        ;;
      *)
        helpInfo
        exit $err_unknown
        ;;
    esac
  done
fi
